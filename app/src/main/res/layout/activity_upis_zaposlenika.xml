<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/black"
    tools:context=".UpisZaposlenika">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:orientation="vertical"
            android:layout_marginEnd="20dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:src="@drawable/logo" />


            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ime:"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="356dp"
                android:layout_height="5dp"
                app:errorEnabled="true" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Upišite ime zaposlenika "
                android:textColorHint="@color/white"
                android:inputType="textCapWords">

            </com.google.android.material.textfield.TextInputEditText>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prezime:"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                />


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="4dp"
                app:errorEnabled="true" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/prezime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Upišite prezime zaposlenika"
                android:textColorHint="@color/white"
                android:inputType="textCapWords">

            </com.google.android.material.textfield.TextInputEditText>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Broj telefona:"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="6dp"
                app:errorEnabled="true" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/broj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Upišite broj telefona zaposlenika"
                android:textColorHint="@color/white"
                android:inputType="phone">

            </com.google.android.material.textfield.TextInputEditText>


            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="4dp"
                app:errorEnabled="true" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Upišite email zaposlenika"
                android:textColorHint="@color/white"
                android:inputType="textEmailAddress">

            </com.google.android.material.textfield.TextInputEditText>


            <ProgressBar

                android:id="@+id/loading"
                android:layout_width="84dp"
                android:layout_height="48dp"
                android:layout_marginStart="150dp"
                android:layout_marginTop="300dp"
                android:indeterminate="true" />

            <Button
                android:id="@+id/posalji"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#A50A0A"
                android:gravity="center"
                android:enabled="false"
                android:text="Upiši novog zaposlenika"
                android:textColor="@color/white">


            </Button>


            <Button
                android:id="@+id/izađi"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#A50A0A"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="Izađi">

            </Button>

        </LinearLayout>

    </ScrollView>
</androidx.appcompat.widget.LinearLayoutCompat>